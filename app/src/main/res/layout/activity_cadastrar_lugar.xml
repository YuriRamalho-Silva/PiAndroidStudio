<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastrarLugarActivity">

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_height="80dp"
        android:textSize="12pt"
        android:background="@color/blue"
        android:text="Cadastre o local"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitulo"
        android:layout_marginTop="100dp"
        android:layout_marginRight="16pt"
        android:layout_marginLeft="16pt"
        android:hint="Latitude:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/editTextLongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/editTextLatitude"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16pt"
        android:layout_marginLeft="16pt"
        android:hint="Longitude"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <EditText
        android:id="@+id/editTextDtCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editTextLongitude"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16pt"
        android:layout_marginLeft="16pt"
        android:hint="Data de cadastro:"
        android:inputType="date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/editTextDescricao"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:hint="Descrição:"
        android:inputType="textMultiLine"
        android:gravity="start"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16pt"
        android:layout_marginLeft="16pt"
        app:layout_constraintTop_toBottomOf="@+id/editTextDtCadastro"/>



    <Button
        android:id="@+id/buttonSalvarLugar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="128dp"
        android:layout_marginLeft="128dp"
        android:background="@color/blue"
        android:onClick="salvar"
        android:text="Salvar"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>